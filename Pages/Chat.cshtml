@page
@model MSALWebApp.Pages.ChatModel
@{
    ViewData["Title"] = "Echo Chat";
}

<div class="text-center">
    <h1 class="display-4">Echo Chat</h1>
    <p class="lead">Simple echo chat service for authenticated users</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Chat Interface</h5>
                <p class="card-text">
                    <small class="text-muted">Logged in as: @User.Identity?.Name</small>
                </p>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="message" class="form-label">Your Message:</label>
                        <textarea class="form-control" id="message" name="message" rows="3" 
                                  placeholder="Type a message to echo..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
                
                @if (!string.IsNullOrEmpty(Model.AgentResponse))
                {
                    <hr/>
                    <div class="alert alert-info">
                        <h6>Echo Response:</h6>
                        <pre>@Model.AgentResponse</pre>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <h6>Error:</h6>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>