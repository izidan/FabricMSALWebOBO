@page
@model MSALWebApp.Pages.TokenModel
@{
    ViewData["Title"] = "User Tokens";
}

<div class="container">
    <h2>User Token Information</h2>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h5>User Information</h5>
                    <p><strong>Name:</strong> @User.Identity.Name</p>
                    <p><strong>Authentication Type:</strong> @User.Identity.AuthenticationType</p>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AccessToken))
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Access Token</h5>
                            @if (!string.IsNullOrEmpty(Model.TokenScope))
                            {
                                <small class="text-muted">Scope: @Model.TokenScope</small>
                            }
                        </div>
                        <div class="card-body">
                            <p><small class="text-muted">Token (first 100 characters):</small></p>
                            <div class="alert alert-secondary">
                                <code>@Model.AccessToken.Substring(0, Math.Min(100, Model.AccessToken.Length))...</code>
                            </div>
                            
                            <p><small class="text-muted">Full Token:</small></p>
                            <textarea class="form-control" rows="10" readonly>@Model.AccessToken</textarea>
                            
                            <div class="mt-3">
                                <button class="btn btn-secondary btn-sm" onclick="copyToClipboard()">Copy Token</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-danger">
                        <h6>Error getting token:</h6>
                        <p>@Model.ErrorMessage</p>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>User Claims</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Claim Type</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var claim in User.Claims)
                                {
                                    <tr>
                                        <td><small>@claim.Type</small></td>
                                        <td><small>@claim.Value</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <h5>Not Authenticated</h5>
            <p>You need to <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">sign in</a> to view token information.</p>
        </div>
    }
</div>

<script>
    function copyToClipboard() {
        const textarea = document.querySelector('textarea');
        textarea.select();
        document.execCommand('copy');
        alert('Token copied to clipboard!');
    }
</script>